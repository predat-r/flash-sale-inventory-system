{
  "info": {
    "name": "Flash Sale API",
    "description": "API for Flash Deal Cart Reservation & Checkout",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Flash Deal Laptop\",\n  \"description\": \"High-performance laptop with discount\",\n  \"total_stock\": 200\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      },
      "response": []
    },
    {
      "name": "Reserve Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": \"user123\",\n  \"product_id\": 1,\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reserve",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reserve"]
        }
      },
      "response": []
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": \"user123\",\n  \"product_id\": 1,\n  \"quantity\": 2,\n  \"total_amount\": 1999.98\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/checkout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "checkout"]
        }
      },
      "response": []
    },
    {
      "name": "Cancel Reservation",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/reserve/user123/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reserve", "user123", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Get Product Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/1/status",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "1", "status"]
        }
      },
      "response": []
    },
    {
      "name": "Get User Reservations",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/users/user123/reservations",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "user123", "reservations"]
        }
      },
      "response": []
    }
  ]
}